<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainactivity"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="14dp"
    android:layout_marginRight="8dp"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="109dp"
        android:layout_marginEnd="5dp"

        android:layout_marginRight="39dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/bungee_shade"
        android:text="Darjeeling Limited"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textColorLink="@color/colorPrimary"
        android:textCursorDrawable="@color/colorPrimary"
        android:textSize="18sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvoverview"
        android:layout_width="274dp"
        android:layout_height="35dp"
        android:layout_below="@+id/tvrelease"

        android:layout_alignStart="@+id/tvname"
        android:layout_marginStart="0dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/antic"
        android:text="usdijhkjaskdlnmakbsdjalsjndkasbndlkasndlkasndalksndasndasldk"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvrelease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvname"
        android:layout_alignParentEnd="true"

        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/play_bold"
        android:text="releaseadate"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/searchclick"
        android:layout_width="114dp"
        android:layout_height="162dp"
        android:layout_alignBottom="@+id/tvoverview"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="288dp"
        android:layout_marginBottom="-2dp"
        app:srcCompat="@drawable/ic_texture_black_24dp" />


</RelativeLayout>